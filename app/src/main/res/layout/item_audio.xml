<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:bind="http://schemas.android.com/apk/res-auto">

    <data>

        <import type="android.view.View" />

        <variable
            name="content"
            type="com.candy.capture.model.Content" />

        <variable
            name="editMode"
            type="java.lang.Boolean" />

        <variable
            name="clickHandler"
            type="com.candy.capture.adapter.ContentListAdapter.ItemClickContentCallback" />

        <variable
            name="audioPlayer"
            type="com.candy.capture.adapter.ContentListAdapter.AudioPlayCallBack" />
    </data>

    <RelativeLayout
        android:id="@+id/rl_root"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:onClick="@{() -> clickHandler.onItemClick(content)}"
        android:onLongClick="@{() -> clickHandler.onItemLongPressed(content)}"
        android:paddingTop="@dimen/activity_vertical_margin"
        android:paddingBottom="@dimen/activity_vertical_margin">

        <CheckBox
            android:id="@+id/cb_select"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:visibility="@{editMode ? View.VISIBLE : View.GONE}"
            android:checked="@={content.select}" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_toLeftOf="@id/cb_select">

            <TextView
                android:id="@+id/tv_desc"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/brother_space"
                android:text="@{content.desc}"
                android:textColor="@color/colorTextPrimary"
                android:textSize="16sp" />

            <include
                layout="@layout/viewstub_audio_view"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/tv_desc"
                bind:clickHandler="@{clickHandler}"
                bind:audioPlayer="@{audioPlayer}"
                bind:content="@{content}" />
        </RelativeLayout>
    </RelativeLayout>
</layout>